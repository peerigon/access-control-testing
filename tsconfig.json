{
  "compilerOptions": {
    "target": "esnext",
    "module": "es6",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
  },
  "include": ["src/**/*"]
}
